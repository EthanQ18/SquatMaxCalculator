import java.util.Scanner;

public class SquatMaxCalculator { 
  public abstract class Coders{//wanting to create a code that will have our nammes in the program but not display them
        private String name;//used to create a new string unknown to the user
    public Coders(String name){
        this.name= name;
   
    }
    }
public static void main(String[] args) {

	System.out.println("Welcome to the Squat Max Calculator");

	//Variables
	int y;// the user's input on reps
	int age;
	int gender;
	int w;// the users's input on weight
	int r;// repeat calculator
	double maxsquat; // formula calculates the maxsquat after the user's input
	double x;// Constant
	

	Scanner scan= new Scanner(System.in); // Computer Scans user input
	r = 1;
	
	System.out.println("Enter age");
	 age = scan.nextInt();
	
	System.out.println("Enter sex: M/F");
	 gender = scan.next().charAt(0);
	
	do { // Beginning of dowhile loop
		System.out.println("Enter the squat weight that you did in lbs: ");	
		w = scan.nextInt();

		System.out.println("Enter number of reps: ");	
		y = scan.nextInt();
		x =   w * (1 + 0.0333 * y);//formula for 1RM
		maxsquat = x;

		double rounded= Math.round(maxsquat);// round method from youtube
		System.out.print( " Your maxsquat is: " + rounded + " lbs");

		
		
		
		if( gender == 'M' && gender == 'm')//turn into a switch statement it would compress and allow more statements and a easier transition
		{
			if (age >=15 && age <=20) 
			System.out.println(" The average weight for your age is 242 lbs");
		}
		else if (age >=21 && age <=25)
		{
			System.out.println(" The average weight for your age is 277 lbs");
		}
		else if (age >=26 && age <=30)
		{
			System.out.println(" The average weight for your age is 284  lbs");
		}
		else if (age >=31 && age <=35)
		{
			System.out.println(" The average weight for your age is 284 lbs");
		}
		else if (age >=36 && age <=40)
		{
			System.out.println(" The average weight for your age is 284 lbs");
		}
		
		if( gender == 'F' && gender == 'f')
		{
			if (age >=15 && age <=20) 
			System.out.println(" The average weight for your age is 137 lbs");
		}
		else if (age >=21 && age <=25)
		{
			System.out.println(" The average weight for your age is 157 lbs");
		}
		else if (age >=26 && age <=30)
		{
			System.out.println(" The average weight for your age is 161  lbs");
		}
		else if (age >=31 && age <=35)
		{
			System.out.println(" The average weight for your age is 161 lbs");
		}
		else if (age >=36 && age <=40)
		{
			System.out.println(" The average weight for your age is 161 lbs");
		}
		
		 int problems = 99;//just wanted to make 99 problems 
	    switch (problems)//Takes the number defined ie 99 and runs throught the cases untill it matches case (99)
	    {
	        case (91):
	            System.out.println("There are 91 problems remaining");
	            break;
	        case (92):
	            System.out.println("There are 92 problems remaining");
	            break;
	       case (93):
	            System.out.println("There are 93 problems remaining");
	            break;
	       case (94):
	            System.out.println("There are 94 problems remaining");
	            break;
	       case (95):
	            System.out.println("There are 95 problems remaining");
	            break;
	       case (96):
	            System.out.println("There are 96 problems remaining");
	            break;
	       case (99):
	            System.out.println(" I wish you luck on the next rep");
	            break;
	    }
		
		System.out.println("Do you want to calculate a new max?  Enter '1' for Yes, '2' for No");
		r = scan.nextInt();
		}
	while (r == 1 ); // end of dowhile loop
	if (r != 1)// if statement
	{ 
		System.out.println("Thank you! Have a Great Day!");
	}
	scan.close();
	
}
}
